{
  "name": "design-tokens-demo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "gen-tokens": "run-s gen-tokens-*",
    "gen-tokens-global": "token-transformer tokens/tokens.json tokens/output/global.json global",
    "gen-tokens-blue-light": "token-transformer tokens/tokens.json tokens/output/blue-light.json global,blue-light global",
    "gen-tokens-blue-dark": "token-transformer tokens/tokens.json tokens/output/blue-dark.json global,blue-dark global",
    "gen-tokens-grey-light": "token-transformer tokens/tokens.json tokens/output/grey-light.json global,grey-light global",
    "gen-tokens-grey-dark": "token-transformer tokens/tokens.json tokens/output/grey-dark.json global,grey-dark global",
    "gen-styles": "node ./infrastructure/generate-styles.js",
    "postcss:run": "postcss apps/advisor-desktop-css/src/styles/styles.css -o apps/advisor-desktop-css/src/main-delete.css",
    "token-pipeline": "run-s gen-tokens gen-styles"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.8",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.0.2",
    "prettier": "^2.5.1",
    "style-dictionary": "^3.7.0",
    "token-transformer": "^0.0.19",
    "turbo": "latest"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "npm@8.4.0"
}
